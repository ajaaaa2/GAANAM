# ================================================
# GAANAM Music App - Environment Variables Template
# ================================================
# Copy this file to .env and fill in your values
# Command: cp .env.example .env
# ================================================

# ==========================================
# Firebase Web Configuration
# ==========================================
FIREBASE_WEB_API_KEY=your_web_api_key_here
FIREBASE_WEB_APP_ID=your_web_app_id_here
FIREBASE_WEB_MEASUREMENT_ID=your_measurement_id_here

# ==========================================
# Firebase Android Configuration
# ==========================================
FIREBASE_ANDROID_API_KEY=your_android_api_key_here
FIREBASE_ANDROID_APP_ID=your_android_app_id_here

# ==========================================
# Firebase iOS Configuration
# ==========================================
FIREBASE_IOS_API_KEY=your_ios_api_key_here
FIREBASE_IOS_APP_ID=your_ios_app_id_here
FIREBASE_IOS_BUNDLE_ID=com.yourcompany.yourapp

# ==========================================
# Firebase macOS Configuration
# ==========================================
FIREBASE_MACOS_API_KEY=your_macos_api_key_here
FIREBASE_MACOS_APP_ID=your_macos_app_id_here
FIREBASE_MACOS_BUNDLE_ID=com.yourcompany.yourapp

# ==========================================
# Firebase Windows Configuration
# ==========================================
FIREBASE_WINDOWS_API_KEY=your_windows_api_key_here
FIREBASE_WINDOWS_APP_ID=your_windows_app_id_here
FIREBASE_WINDOWS_MEASUREMENT_ID=your_windows_measurement_id_here

# ==========================================
# Common Firebase Configuration
# ==========================================
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_STORAGE_BUCKET=your_bucket_name_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com

# ==========================================
# App Configuration
# ==========================================
APP_NAME=GAANAM
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# ==========================================
# API Rate Limits (Optional)
# ==========================================
MAX_UPLOAD_SIZE_MB=50
MAX_IMAGE_SIZE_MB=10
API_TIMEOUT_SECONDS=30

# ==========================================
# Feature Flags (Optional)
# ==========================================
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_OFFLINE_MODE=false
ENABLE_SOCIAL_SHARING=false

# ==========================================
# Debug Settings
# ==========================================
DEBUG_MODE=true
SHOW_PERFORMANCE_OVERLAY=false